class Position {
    ' instructor, professor, etc.
    String title
    ' faculty position, postdoctoral position
    String type
    Integer startYear
    Integer endYear
}

'  enum PositionType {
'      FACULTY_ADMINISTRATIVE_POSITION
'      FACULTY_POSITION
