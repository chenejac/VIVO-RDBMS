class ResearchArea {
    String name
    String description
}

' ResearchArea "*" --> "0..1" ResearchArea:partOf


class Person {
    String firstname
    String otherName
    String lastname
    String preferredTitle
    ' FACULTY_MEMBER
    ' FACULTY_MEMBER_EMERITUS
    ' LIBRARIAN_EMERITUS
    ' PROFESOR_EMERITUS
    ' LIBRARIAN
    ' NON_ACADEMIC
    ' NON_FACULTY_ACADEMIC
    ' POSTDOC
    String type
    String orcid
}

Person "*" --> "*" ResearchArea:researchAreas

